# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tapvote?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/tapvote"

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this

# OpenAI Configuration (for AI poll generation)
OPENAI_API_KEY=your-openai-api-key

# News API Configuration
NEWS_API_KEY=your-newsapi-key
NEWS_API_URL=https://newsapi.org/v2

# Translation API (Optional)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Redis Configuration (optional, for advanced caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Social Authentication (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_AI_POLLS=true
ENABLE_PREDICTIONS=true
ENABLE_NEWS_INTEGRATION=true
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=true

# External Services
WEBHOOK_SECRET=your-webhook-secret
API_BASE_URL=http://localhost:5000/api

# Development Tools
DEBUG=false
ENABLE_SWAGGER=true